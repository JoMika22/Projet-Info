#include <stdio.h>







typedef struct{
    char* nom;
    int PV;
    int PVmax;
    int att;
    int def;
    int agi;
    int vit;
    SpecialAttack spé;
    int effetspécial;
}perso;

typedef struct{
    char* name ;
    int nb_rounds ;
    int reload ;
    char* description ;
    int special_effects ;
}SpecialAttack;


